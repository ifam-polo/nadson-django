{
  "window.zoomLevel": 2,
  "editor.fontSize": 14,
  "python.languageServer": "Pylance", // ms-python.vscode-pylance
  "python.testing.unittestEnabled": false, // ms-python.python
  "python.testing.pytestEnabled": true,
  "python.testing.pytestArgs": [], // -x to bail
  "python.linting.flake8Enabled": false,
  "python.linting.mypyEnabled": true,
  "python.linting.pylintArgs": [
    "--load-plugins=pylint_django",
    "--errors-only"
  ],
  "python.formatting.autopep8Args": ["--indent-size=4"],
  "python.defaultInterpreterPath": "venv/bin/python",
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter", // ms-python.python
    "editor.tabSize": 4,
    "editor.insertSpaces": true,
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": true
    }
  },
  "[html]": {
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "vscode.html-language-features",
    "editor.quickSuggestions": {
      "other": true,
      "comments": true,
      "strings": true
    }
  },
  "[django-html]": {
    "editor.formatOnSave": false,
    "editor.defaultFormatter": "vscode.html-language-features",
    "editor.quickSuggestions": {
      "other": true,
      "comments": true,
      "strings": true
    }
  },
  "files.associations": {
    "*.js": "javascript",
    "*.jsx": "javascriptreact",
    "*.xml": "html",
    "*.svg": "html",
    "*.html": "html",
    "django-html": "html", // batisteo.vscode-django
    "**/*.html": "html",
    "**/templates/**/*.html": "django-html",
    "**/base_templates/**/*.html": "django-html",
    "**/requirements{/**,*}.{txt,in}": "pip-requirements"
  },
  "emmet.includeLanguages": {
    "django-html": "html", // batisteo.vscode-django
    "javascript": "javascriptreact",
    "typescript": "typescriptreact"
  },
  "python.formatting.provider": "none",
  "cSpell.words": [
    "abre",
    "arqu",
    "arquivo",
    "aula",
    "busca",
    "categoria",
    "classe",
    "Clica",
    "criação",
    "desejado",
    "Diferent",
    "digita",
    "encontrar",
    "estava",
    "gente",
    "importação",
    "mais",
    "Manaus",
    "Minutos",
    "Mostra",
    "neste",
    "página",
    "paginação",
    "Pedaços",
    "Pessoas",
    "poder",
    "Porções",
    "procurando",
    "receita",
    "receitas",
    "Registro",
    "salva",
    "sobre",
    "staticos",
    "sucesso",
    "também",
    "termo",
    "Teste",
    "texto",
    "título",
    "Usuário"
  ]
}